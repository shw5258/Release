<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.light.release.ui.SplashActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="@dimen/splash_icon_dim"
        android:layout_height="@dimen/splash_icon_dim"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:contentDescription="@string/cd_splash_image"
        android:src="@drawable/icon_hi_res" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.2"
        android:text="@string/app_name"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="@color/grey"
        android:textStyle="bold" />

</LinearLayout>